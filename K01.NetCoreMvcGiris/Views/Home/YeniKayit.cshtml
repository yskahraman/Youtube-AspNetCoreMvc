@model KullaniciViewModel
@{
    ViewData["Title"] = "YeniKayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container">
       
        <form asp-action="YeniKayit" asp-controller="Home" method="post" class="w-50 mx-auto mt-4 p-3 shadow">

            <div class="form-group">
                <label asp-for="KullaniciAd"></label>
                <span asp-validation-for="KullaniciAd" class="text-danger"></span>
                <input asp-for="KullaniciAd" class="form-control" />
            </div>


            <div class="form-group">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Sifre"></label>
                <span asp-validation-for="Sifre" class="text-danger"></span>
                <input asp-for="Sifre" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Telefon"></label>
                <span asp-validation-for="Telefon" class="text-danger"></span>
                <input asp-for="Telefon" class="form-control" />
            </div>


            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger">

            </div>
        </form>
    </div>

