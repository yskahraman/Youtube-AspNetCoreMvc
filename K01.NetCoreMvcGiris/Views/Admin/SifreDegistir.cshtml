@model SifreViewModel
@{
    ViewData["Title"] = "SifreDegistir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <form class="w-50 mx-auto mt-3 shadow p-4" method="post" asp-action="SifreDegistir" asp-controller="Admin">
        <div class="form-group">
            <label asp-for="EskiSifre"></label>
            <span asp-validation-for="EskiSifre"></span>
            <input asp-for="EskiSifre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Sifre"></label>
            <span asp-validation-for="Sifre"></span>
            <input asp-for="Sifre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="SifreTekrar"></label>
            <span asp-validation-for="SifreTekrar"></span>
            <input asp-for="SifreTekrar" class="form-control" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Değiştir</button>
        </div>
        <div class="text-danger" asp-validation-summary="ModelOnly">

        </div>
    </form>

