@model List<RolAtaViewModel>
@{
    ViewData["Title"] = "RolAta";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <form method="post" asp-action="RolAta" asp-controller="Admin" class="w-50 mx-auto mt-4 p-4 shadow">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input type="checkbox" asp-for="@Model[i].VarMi" class="form-check-input"  />
                <label class="form-check-label">
                    @Model[i].RolAd
                </label>
                <input type="hidden" asp-for="@Model[i].RolId"/>
                <input type="hidden" asp-for="@Model[i].RolAd" />
            </div>
        }

    <div class="form-group">
        <input type="submit" class="btn btn-info" value="Kaydet" />
    </div>
    </form>


