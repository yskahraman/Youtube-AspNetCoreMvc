@model KullaniciViewModel
@{
    ViewData["Title"] = "KullaniciGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

    <form asp-action="KullaniciGuncelle" asp-controller="Admin" method="post" class="w-50 mx-auto mt-3 p-4 shadow">
        <div class="form-group">
            <label asp-for="KullaniciAd"></label>
            <span asp-validation-for="KullaniciAd" class="text-danger"></span>
            <input asp-for="KullaniciAd" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Telefon"></label>
            <span asp-validation-for="Telefon" class="text-danger"></span>
            <input asp-for="Telefon" class="form-control" />
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger">
            
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Kaydet" />
        </div>
    </form>
